{
    "version": "2.0.0",
    "windows": {
        "command": "${env:windir}/System32/WindowsPowerShell/v1.0/powershell.exe",
        "args": [ "-NoProfile", "-ExecutionPolicy", "Bypass" ]
    },
    "tasks": [
        {
            "label": "Compile Java4",
            "type":"process",
            "command": "C:/byod/java1.8_152/bin/javac.exe",
            "windows": {
                "args": [
                    "-encoding",
                    "utf-8",
                    "-source",
                    "1.8",
                    "-target",
                    "1.8",
                    "-cp",
                    "bin",
                    "-d",
                    "${workspaceFolder}\\bin",
                    "-sourcepath",
                    "${fileDirname}",
                    "${file}",
                    "-Xlint"
                ]
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "build",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(警告|エラー):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ]
}